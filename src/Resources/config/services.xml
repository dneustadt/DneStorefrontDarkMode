<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Dne\StorefrontDarkMode\Subscriber\ThemeCompileSubscriber">
            <argument type="service" id="shopware.filesystem.theme"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument>%kernel.debug%</argument>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Dne\StorefrontDarkMode\Subscriber\SystemConfigChangedSubscriber">
            <argument type="service" id="Shopware\Storefront\Theme\ThemeService"/>
            <argument type="service" id="sales_channel.repository"/>
            <argument type="service" id="event_dispatcher"/>
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
